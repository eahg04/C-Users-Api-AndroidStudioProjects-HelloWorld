<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0000ff</item>
        <item name="colorPrimaryVariant">#00ff00</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/Widget.AppTheme.EditText</item>
    </style>

    <style name="AppTheme.MyActivityTheme">
        <item name="colorPrimary">#0000ff</item>
    </style>

    <style name="AppTheme.Form">
        <item name="colorSecondary">#f00000</item>
    </style>
    
    <style name="Widget.AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
    </style>



</resources>